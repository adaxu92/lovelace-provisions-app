<div id="bigshowcontainer">
	<div id="home">
		<%= link_to "☁ ", root_path %>
	</div>

	<div id="results-container">
		<h1><%= @horoscope.name %></h1>

		<strong><%= @parsed_date %></strong>		
		<div class="links-container">
			<%= link_to "⊲ yesterday", yesterday_horoscope_path(@horoscope) %>
			<%= link_to "| today |", horoscope_path(@horoscope) %>
			<%= link_to " tomorrow ⊳", tomorrow_horoscope_path(@horoscope) %>
		</div>
		<br></br>

		<div id="show-container">
			Forecast: 
			<br>
			<i>"<%= @parsed_horoscope %>"</i>
			<br></br>

			Mood:
			<br> 
			<%= @parsed_mood %>, <%= @parsed_keywords %>
			<br></br>

			Intensity:<br>
			<%= @parsed_intensity %>
		</div>
	</div>
	<div id="disqus_thread"></div>
		<script>
		    (function() {  // DON'T EDIT BELOW THIS LINE
		        var d = document, s = d.createElement('script');
		        
		        s.src = '//lovelace-ada.disqus.com/embed.js';
		        
		        s.setAttribute('data-timestamp', +new Date());
		        (d.head || d.body).appendChild(s);
		    })();
		</script>
		<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
	</div>
</div>


